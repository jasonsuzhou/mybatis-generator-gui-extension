<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="../../../layui/css/layui.css">
    <script type="text/javascript" src="../../../layui/layui.js" charset="utf-8"></script>
</head>
<body>
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
    <legend>添加${table.entityLowerCamel}</legend>
</fieldset>
<form class="layui-form" method="post" lay-filter="${table.entityLowerCamel}Add-filter">
    #foreach($column in $table.columns)
        #if (${column.fieldName} == "id")

        #else
        <div class="layui-form-item">
            <label class="layui-form-label">${column.fieldName}</label>
            <div class="layui-input-block">
                <input type="text" lay-verify="required" name="${column.fieldName}" autocomplete="off" class="layui-input">
            </div>
        </div>
        #end
    #end
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit="" lay-filter="${table.entityLowerCamel}Add-filter">立即提交</button>
            <button type="button" class="layui-btn layui-btn-primary" data-type="cancelEdit">取消</button>
        </div>
    </div>
</form>
</body>
<script>
    var action = "../../../api/${table.entityLowerCamel}/add";
    layui.use('form', function () {
        var $ = layui.$;
        var form = layui.form;

        form.on('submit(${table.entityLowerCamel}Add-filter)', function (data) {
            $.post(action, data.field, function (res) {
                if (res.code === 0) {
                    if (parent.layer == undefined) {
                        layer.msg("提交成功", {time: 1000}, function () {
                            window.location.href = '${table.entityLowerCamel}List.html';
                        });
                    } else {
                        layer.msg("提交成功", {time: 1000}, function () {
                            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                            parent.layer.close(index);
                            parent.$('#btnRefresh').click();
                        });
                    }
                } else {
                    if (res != '' && res.msg.startsWith('Per')) {
                        parent.window.location.href = '../../login.html';
                    }
                    layer.alert(res.msg,{title:'出错了',icon:2});
                }
            });
            return false;
        });
    });

</script>
</html>