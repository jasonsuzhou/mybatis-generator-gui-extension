<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="../../../layui/css/layui.css">
    <link rel="stylesheet" href="../../../css/main.css">
    <script type="text/javascript" src="../../../layui/layui.js" charset="utf-8"></script>
</head>
<body>
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
    <legend>修改${table.remarks}</legend>
</fieldset>
<form class="layui-form" method="post" lay-filter="${table.entityLowerCamel}Edit-filter">
    #foreach($column in $table.columns)
        #if (${column.fieldName} == "id")
            <input type="hidden" id="id" name="id">
        #else
            <div class="layui-form-item">
            #if (${column.required} == "true")
            <label class="layui-form-label required">${column.remarks}</label>
            <div class="layui-input-block">
                <input type="text" lay-verify="required" name="${column.fieldName}" autocomplete="off" class="layui-input">
            </div>
            #else
            <label class="layui-form-label">${column.remarks}</label>
            <div class="layui-input-block">
                <input type="text" name="${column.fieldName}" autocomplete="off" class="layui-input">
            </div>
            #end
            </div>
        #end
    #end
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit="" lay-filter="${table.entityLowerCamel}Edit-filter">立即提交</button>
            <button type="button" class="layui-btn layui-btn-primary" data-type="cancelEdit">取消</button>
        </div>
    </div>
</form>
</body>
<script>
    function getParam(paramName) {
        paramValue = "", isFound = !1;
        if (this.location.search.indexOf("?") == 0 && this.location.search.indexOf("=") > 1) {
            arrSource = unescape(this.location.search).substring(1, this.location.search.length).split("&"), i = 0;
            while (i < arrSource.length && !isFound) arrSource[i].indexOf("=") > 0 && arrSource[i].split("=")[0].toLowerCase() == paramName.toLowerCase() && (paramValue = arrSource[i].split("=")[1], isFound = !0), i++
        }
        return paramValue == "" && (paramValue = null), paramValue
    }

    layui.use(['form', 'layedit'], function () {
        var form = layui.form
                , layer = layui.layer
                , $ = layui.$
        //监听提交
        form.on('submit(${table.entityLowerCamel}Edit-filter)', function (data) {
            var formData = JSON.stringify(data.field);
            $.ajax({
                url: '../../../api/${table.entityLowerCamel}/update',
                type: 'post',
                contentType: "application/json; charset=utf-8",
                dataTye: 'json',
                data: formData,
                success: function (data) {
                    if (data.code == 0) {
                        layer.msg("修改成功",{time: 1000},function (data) {
                            var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                            parent.layer.close(index);
                            parent.$('#btnRefresh').click();
                        });
                    } else {
                        if (data != '' && data.msg.startsWith('Per')) {
                            parent.window.location.href = '../../login.html';
                        }
                        layer.msg(data.msg);
                    }
                }
            });
            return false;
        });
        var id = getParam('id');
        $.ajax({
            url: '../../../api/${table.entityLowerCamel}/queryById/' + id,
            type: 'get',
            dataTye: 'json',
            success: function (data) {
                var record = data.data;
                //表单初始赋值
                form.val('${table.entityLowerCamel}Edit-filter', {
                #foreach($column in $table.columns)
                    #if (${column.fieldName} == "id")
                        "id": record.id
                    #else
                        , "${column.fieldName}": record.${column.fieldName}
                    #end
                #end
                })
            }
        });

        var active = {
            cancelEdit: function () {
                var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                parent.layer.close(index); //再执行关闭
            }
        }
        $('.layui-btn').on('click', function () {
            var type = $(this).data('type');
            active[type] ? active[type].call(this) : '';
        });
    });
</script>
</html>